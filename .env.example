# Alpaca API credentials (paper trading)
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
# Paper trading base URL for Alpaca
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Safety toggle: keep false unless you intend to trade live
ENABLE_LIVE_TRADING=false
# Required confirmation token when enabling live trading
LIVE_TRADING_CONFIRMATION_TOKEN=change_me_before_live_trading

# LLM Provider API Keys (set one based on llm_provider in config.yaml)
OPENAI_API_KEY=sk-your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key


# Alpha Vantage news API key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
# Discord Notifications (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# Risk control: max allowed daily loss as a fraction (e.g., 0.02 = 2%)
MAX_DAILY_LOSS_PCT=0.02

# Logging level (e.g., DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
